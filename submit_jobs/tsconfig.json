{
  "compilerOptions": {
    "lib": ["es2015", "dom","es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "ES6",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "jsx": "react"
  },
  "include": ["src/*"]
}