{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
//    "composite": true,
//    "declaration": true,
    "esModuleInterop": true,
//    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "es2017",
    "types": [],
    "lib": ["es2017", "dom"],
    "allowJs": true

  },
  "include": ["src/*"]
}


