{
  "compilerOptions": {
    //"declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "es6",
    "types": []
  },
  "include": ["src/*"]
}